<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/20" xmlns:fx="http://javafx.com/fxml" fx:controller="ru.student.cyber.controller.MainController">
    <HBox spacing="10">
        <Label text="Количество фигур:"/>
        <TextField fx:id="countField" text="50" prefWidth="60"/>
        <Label text="Ширина:"/>
        <TextField fx:id="widthField" text="800" prefWidth="60"/>
        <Label text="Высота:"/>
        <TextField fx:id="heightField" text="600" prefWidth="60"/>
        <Label text="Кучность:"/>
        <TextField fx:id="densityField" text="1.0" prefWidth="60"/>
        <Label text="Шаг сетки:"/>
        <TextField fx:id="gridStepField" text="50" prefWidth="60"/>
        <Button text="Сгенерировать" onAction="#onGenerate"/>
    </HBox>
    <Canvas fx:id="canvas" width="800" height="600"/>
</VBox>
